<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.favor.app" >
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--TODO: The above is here largely for exporting the database for debugging, and can likely be deleted afterward -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/favor_icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactSelectActivity"
            android:label="@string/title_activity_contact_select" >
        </activity>
        <activity
            android:name=".ContactStatsActivity"
            android:label="@string/title_activity_contact_stats" >
        </activity>
    </application>

</manifest>
